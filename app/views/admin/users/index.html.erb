<div class="admin_links">
  <%= link_to "ユーザー一覧", admin_users_path, class: "left_nav" %>
  <%= link_to "不適切投稿一覧", admin_describes_path, class: "left_nav" %>
  <%= link_to "カテゴリー作成", new_admin_category_path %>
</div>

<div class="admin_users">
  <% @users.each do |user| %>
    <div class="name">
      <%= user.name %>
    </div>

    <div class="email">
      <%= user.email %>
    </div>
    <%= link_to 'Destroy', admin_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  <% end %>
</div>
