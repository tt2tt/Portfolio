<div class="my_page">
  <%= image_tag @user.profile_image.url %>
    <div class="user_form">
      <%= form_for current_user, url: {action: 'profile_update'} do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="user_profile_image">
          <%= f.file_field :profile_image %>
        </div>

        <div class="user_name">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>

        <div class="user_email">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>

        <p class="user_form_submit"><%= f.submit %></p>
      <% end %>
    </div>

  <div class="my_page_links"">
    <p><%= link_to "パスワードを変更する", edit_user_registration_path(current_user.id) %></p>
    <p><%= link_to "ユーザーを削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>
</div>
