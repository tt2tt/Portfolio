<% if user_signed_in? %>
  <% unless describe.user_id == current_user.id %>
    <% if like.present? %>
      <%= link_to like_path(id: like.id, describe_id: describe.id), method: :delete, remote: true do %>
         <i class="fas fa-heart fa-3x" style="color:red";></i> <%= describe.likes_count %>
      <% end %>
    <% else %>
      <%= link_to likes_path(describe_id: describe.id), method: :post, remote: true do %>
        <i class="far fa-heart fa-3x" style="color:red"></i> <%= describe.likes_count %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
